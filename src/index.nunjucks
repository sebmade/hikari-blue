  <a name="method"></a>
  <section class="section-method">
    <h3>Méthode</h3>
    <div class="section-method-content">
      <h4 class="mdl-typography-text-center">L'innovation en 4 étapes</h4>
      <div class="mdl-grid">
        <div class="method-step step--1 mdl-cell--4-col mdl-cell--12-col-tablet mdl-cell--12-col-phone">
          <div class="step-number">1</div>
          <h5 class="mdl-typography--text-uppercase mdl-typography--font-bold">recherche d'un nouveau<br/> modèle économique</h5>
          <div class="mdl-grid grid-steps">
            <div class="mdl-cell--5-col mdl-cell--3-col-tablet mdl-cell--12-col-phone margin-auto">
              <div class="oval vertical-align-middle">
                <img src="images/recherche.svg">
              </div>
              <h5>Recherche</h5>
            </div>
            <div class="mdl-cell--1-col mdl-cell--1-col-tablet mdl-cell--12-col-phone margin-auto">
              <div class="separator">
                <i class="material-icons">keyboard_arrow_down</i>
              </div>
            </div>
            <div class="mdl-cell--5-col mdl-cell--3-col-tablet mdl-cell--12-col-phone margin-auto">
              <div class="oval vertical-align-middle">
                <img src="images/validation.svg">
              </div>
              <h5>Validation</h5>
            </div>
            <div class="separator separator-mobile">
              <i class="material-icons">keyboard_arrow_down</i>
            </div>

          </div>
          <div class="method-underline">
            <h5>Répétition jusqu'à la preuve</h5>
          </div>
        </div>
        <div class="method-transition mdl-cell--4-col mdl-cell--12-col-tablet mdl-cell--12-col-phone">
          <div class="mdl-grid">

            <div class="method-transition-label mdl-cell--10-col  mdl-cell--3-col-tablet margin-auto">
              <div class="separator">
                <i class="material-icons">keyboard_arrow_down</i>
              </div>
              <h5 class="mdl-typography--text-uppercase mdl-typography--font-bold">Adéquation
                <br>produit / marché</h5>
              <div class="separator">
                <i class="material-icons">keyboard_arrow_down</i>
              </div>
            </div>

          </div>
        </div>
        <div class="method-step step--2 mdl-cell--4-col mdl-cell--12-col-tablet mdl-cell--12-col-phone">
          <div class="step-number">2</div>
          <h5 class="mdl-typography--text-uppercase mdl-typography--font-bold">Exécution du nouveau
            <br>modèle économique</h5>

          <div class="mdl-grid grid-steps">
            <div class="separator separator-mobile">
              <i class="material-icons">keyboard_arrow_down</i>
            </div>

            <div class="mdl-cell--5-col mdl-cell--3-col-tablet mdl-cell--12-col-phone margin-auto">
              <div class="oval vertical-align-middle">
                <img src="images/creation.svg">
              </div>
              <h5>Création</h5>
            </div>

            <div class="mdl-cell--1-col mdl-cell--1-col-tablet mdl-cell--12-col-phone margin-auto">
              <div class="separator">
                <i class="material-icons">keyboard_arrow_down</i>
              </div>
            </div>

            <div class="mdl-cell--5-col mdl-cell--3-col-tablet mdl-cell--12-col-phone margin-auto">
              <div class="oval vertical-align-middle">
                <img src="images/execution.svg">
              </div>
              <h5>Exécution</h5>
            </div>

          </div>
        </div>
      </div>
    </div>
  </section>
